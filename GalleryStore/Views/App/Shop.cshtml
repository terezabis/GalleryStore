@model IEnumerable<Product>
@{ 
    ViewBag.Title = "Shop";
}

    <h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="well well-sm">
                <img height="300" class="image-responsive" src="~/img/@(p.ArtId).jpg" alt="@p.Title" />
                <h3>@p.Category - @p.Size</h3>
                <ul class="product-props">
                    <li><b>Price: </b>@p.Price$</li>
                    <li><b>Artist: </b>@p.Artist</li>
                    <li><b>Title: </b>@p.Title</li>
                    <li><b>Description: </b>@p.ArtDescription</li>
                </ul>
                <button>Buy</button>
            </div>
        </div>

    }
</div>