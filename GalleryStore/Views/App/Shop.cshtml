@model IEnumerable<Product>
@{
    ViewBag.Title = "Shop";
}

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="well well-sm" style="padding:5px">
                <img class="image-responsive shop-image" src="~/img/@(p.ArtId).jpg" alt="@p.Title" />
                <h3>@p.Category - @p.Size</h3>
                <ul class="product-props">
                    <li><b>Price: </b>@p.Price$</li>
                    <li><b>Artist: </b>@p.Artist</li>
                    <li><b>Title: </b>@p.Title</li>
                </ul>
                <button class="btn btn-primary" type="button" onclick="@("window.location.href='" + @Url.Action("Product", "App", new {productId = p.Id}) + "'");">Details</button>
                <button class="btn btn-success">Buy</button>

                @if (User.IsInRole("Admin"))
                {
                    <button class="btn btn-info" onclick="@("window.location.href='" + @Url.Action("EditProduct", "App", new {productId = p.Id}) + "'");">Edit</button>
                }
            </div>
        </div>

    }
</div>