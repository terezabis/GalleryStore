<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gallery Store: @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <header>
        <div class="navbar-brand"><h3>Gallery Store</h3></div>
        <div class="topnav" id="myTopnav">
            <nav>
                <a asp-controller="App" asp-action="Index">Home</a>
                <a asp-controller="App" asp-action="Contact">Contact</a>
                <a asp-controller="App" asp-action="About">About</a>
                <a asp-controller="App" asp-action="Shop">Shop</a>
                @if (User.Identity.IsAuthenticated)
                {
                <a asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">Login</a>

                }
            </nav>
        </div>
    </header>

    <div id="main">
        <div id="content">
            <section>
                <h4 align="center">@ViewBag.Title</h4>
                @RenderBody()
            </section>
        </div>
    </div>
    <footer>
        <div id="info-bar">
            <div class="container clearfix">
                Copyright 2017 Gallery Store LLC
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>